{
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    // Erreurs critiques
    "no-unused-vars": ["error", { 
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_" 
    }],
    "no-undef": "error",
    "no-unreachable": "error",
    "no-duplicate-imports": "error",
    "no-console": "off", // Autorisé pour un bot
    
    // Style et bonnes pratiques
    "indent": ["warn", 2],
    "quotes": ["warn", "double"],
    "semi": ["warn", "always"],
    "comma-dangle": ["warn", "never"],
    "no-trailing-spaces": "warn",
    "eol-last": "warn",
    
    // Sécurité
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error",
    
    // Async/await
    "require-await": "warn",
    "no-async-promise-executor": "error",
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "*.min.js",
    "processed_jobs.json"
  ]
}